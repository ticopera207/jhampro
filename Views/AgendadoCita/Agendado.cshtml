@model jhampro.Models.AgendadoCitaViewModel
@{
    ViewData["Title"] = "Agendar Cita";

    @* var abogados = ViewBag.Abogados as IEnumerable<dynamic> ?? new List<dynamic>(); *@
    var abogados = Model.Abogados;
}
<link rel="stylesheet" href="~/css/cita.css" />
<div class="cita-container">
    <div class="cita-header">
        <img src="~/imagenes/re1.png" alt="Logo Consultorio" class="cita-logo">
        <h1>Agendar Cita</h1>
    </div>

    <div class="cita-body">
        @Html.ValidationSummary(true, "", new { @class = "alert alert-danger" })

        @if (TempData["MensajeExito"] != null)
        {
            <div class="alert alert-success" role="alert">
                @TempData["MensajeExito"]
            </div>
        }

        <form asp-action="RegistrarCita" method="post">
            <div class="form-section">
                <h2>Abogado</h2>
                <select name="AbogadoId" class="form-control" required>
                    <option value="">Seleccione un abogado</option>
                    @foreach (var abogado in abogados)
                    {
                        <option value="@abogado.Id">@($"{abogado.Nombres} {abogado.Apellidos}")</option>
                    }
                </select>
            </div>

            <div class="form-section">
                <h2>Fecha y Hora</h2>
                <div class="form-row">
                    <div class="form-group">
                        <input type="date" name="Fecha" class="form-control" required min="@DateTime.Now.ToString("yyyy-MM-dd")" />
                    </div>
                    <div class="form-group">
                        <select name="Hora" class="form-control" required>
                            <option value="">Seleccione una hora</option>
                            @for (int h = 9; h < 18; h++)
                            {
                                <option value="@h">@($"{h}:00 - {h + 1}:00")</option>
                            }
                        </select>
                    </div>
                </div>
            </div>

            <input type="hidden" name="TipoServicio" value="Cita" />
            
            <button type="submit" class="btn-primary">
                AGENDAR
            </button>
        </form>
        <div class="servicios-container">
            <h2>Historial citas</h2>

            @foreach (var servicio in Model.Servicios)
            {
                var estadoClase = servicio.Estado == "EnEspera" ? "estado-enespera" : "estado-pagado";
                <div class="servicio-card">
                    <p><strong>NÃºmero orden:</strong> @servicio.Id</p>
                    <p><strong>Fecha:</strong> @servicio.FechaInicio.ToString("dd/MM/yyyy HH:mm")</p>
                    <p class="servicio-estado @estadoClase">@servicio.Estado</p>

                    @if (servicio.Estado == "EnEspera")
                    {
                        <form asp-action="PagarCita" asp-controller="AgendadoCita" method="post">
                            <input type="hidden" name="servicioId" value="@servicio.Id" />
                            <button type="submit" class="btn-primary">Pagar</button>
                        </form>
                    }

                    @if (servicio.Estado == "Pagado")
                    {
                        <a class="btn btn-success" href="@Url.Content($"~/comprobantes/Comprobante_{servicio.Id}.pdf")" target="_blank">Descargar Comprobante</a>
                    }
                </div>
            }
        </div>

    </div>
</div>