@model Jham.Models.Usuario

@{
    ViewData["Title"] = "Registrarse";
}

<!-- Link al CSS solo para esta p치gina -->
<link rel="stylesheet" href="~/css/registro.css" />

<div class="fondo-registro">
    <div class="formulario-card">
        <h2>Formulario de Registro</h2>

        <form asp-action="Registrarse" method="post">
            <div class="form-group mb-3">
                <label asp-for="Nombre"></label>
                <input asp-for="Nombre" class="form-control" />
                <span asp-validation-for="Nombre" class="text-danger small"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Apellidos"></label>
                <input asp-for="Apellidos" class="form-control" />
                <span asp-validation-for="Apellidos" class="text-danger small"></span>
            </div>

            <div class="form-group mb-3">
            <label asp-for="FechaNacimiento">Fecha de Nacimiento</label>
            <input asp-for="FechaNacimiento" type="date" class="form-control"
             max="@DateTime.Now.AddYears(-18).ToString("yyyy-MM-dd")" />
             <span asp-validation-for="FechaNacimiento" class="text-danger small"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Dni"></label>
                <input asp-for="Dni" class="form-control" />
                <span asp-validation-for="Dni" class="text-danger small"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Correo"></label>
                <input asp-for="Correo" type="email" class="form-control" />
                <span asp-validation-for="Correo" class="text-danger small"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Contrase침a"></label>
                <input asp-for="Contrase침a" type="password" class="form-control" />
                <span asp-validation-for="Contrase침a" class="text-danger small"></span>
            </div>

           <div class="form-group mb-3">
             <label asp-for="Celular"></label>
            <input asp-for="Celular" class="form-control" maxlength="9" />
            <span asp-validation-for="Celular" class="text-danger small"></span>
            </div>

            <div class="form-group mb-4">
                <label asp-for="TipoUsuario"></label>
                <select asp-for="TipoUsuario" class="form-control">
                    <option value="">Seleccione un tipo</option>
                    <option value="Cliente">Cliente</option>
                    <option value="Abogado">Abogado</option>
                    
                </select>
                <span asp-validation-for="TipoUsuario" class="text-danger small"></span>
            </div>

            <div class="d-grid">
                
                <button type="submit" class="btn btn-custom">Registrarse</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
